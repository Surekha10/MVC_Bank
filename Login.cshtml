
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            $(".text-danger").hide();
            $("#btn_LoginID").click(function () {
                if ($("#LoginID").val().length == 0)
                {
                    $("#LoginID_error").show();
                    $("#LoginID").focus();
                    return false;
                }
                else
                {
                    $("#LoginID_error").hide();
                }
                if ($("#Password").val().length == 0)
                {
                    $("#Password_error").show();
                    $("#Password").focus();
                    return false;
                }
                else
                {
                    $("#Password_error").hide();
                }
            });
        });
    </script>
</head>
<body>
    <div align="center">
        <form method="post" action="/Bank/Login" class="container" style="text-align:left;width:30%;">
            <div class="form-group">
                <label for="LoginID" class="form-control-static">Login ID</label>
                <input type="text" name="LoginID" id="LoginID" class="form-control" />
                <label for="LoginID" id="LoginID_error" class="text-danger">*</label>
            </div>
            <div class="form-group">
                <label for="Password" class="form-control-static">Password</label>
                <input type="text" name="Password" id="Password" class="form-control" />
                <label for="Password" id="Password_error" class="text-danger">*</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" id="btn_LoginID" class="btn-danger" />
                @Html.ActionLink("New User", "NewUser", "Bank")
                <br />
                <label class="label-danger">@ViewBag.msg</label>
            </div>
        </form> 
    </div>
</body>
</html>
